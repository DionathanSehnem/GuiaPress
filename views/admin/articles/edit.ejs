<%- include('../../partials/header.ejs') %>


    <body>
        <%- include('../../partials/navbar.ejs') %>
            <div class="container mt-5">
                <div class="card">
                    <div class="card-header">
                        <h2>Editar Artigo</h2>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/admin/articles/update">
                            <input type="hidden" name="id" id="id" value="<%= article.id %>">
                            <input class="form-control mb-3" type="text" name="title" id="title" placeholder="Defina o tÃ­tulo do artigo" value="<%= article.title %>">
                            <textarea class="form-control" placeholder="Escreva o artigo aqui" name="body" id="article" value="<%= article.body%>"></textarea>
                            <label class="mt-3">Categoria</label>
                            <select class="form-control" name="category" id="category">
                                <% categories.forEach((category) => { if(article.categoryId==category.id){%>
                                    <option value="<%= category.id %>" selected><%= category.title %></option>
                                    <% }else{%>
                                        <option value="<%= category.id %>"><%= category.title %></option>
                                        <%}}) %>
                            </select>
                            <button class="btn btn-success mt-3">Atualizar</button>
                        </form>
                    </div>
                </div>
            </div>
            <div id="testing">
                <p>a</p>
            </div>
    </body>
    <%- include('../../partials/footer.ejs') %>

        <script src="/tinymce/tinymce.min.js"></script>
        <script>
            let data = `<%= article.body %>`;
            document.getElementById('article').innerHTML = data;
            tinymce.init({
                selector: "#article",
                language: "pt_BR",
                plugins: ['advlist', 'autolink', 'link', 'image', 'lists', 'preview', 'searchreplace', 'wordcount', 'fullscreen', 'insertdatetime', 'media', 'save', 'table', 'emoticons'],
            })
        </script>