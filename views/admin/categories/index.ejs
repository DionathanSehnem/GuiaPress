<%- include('../../partials/header.ejs') %>


    <body>
        <%- include('../../partials/navbar.ejs') %>
            <div class="container mt-5">
                <h2>Categorias</h2>
                <a href="/admin/categories/new" class="btn btn-success">Criar nova categoria</a>
                <table class="table table-bordered mt-4">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Slug</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                        </tr>
                        <% categories.forEach((category) => { %>
                            <tr>
                                <th>
                                    <%= category.id %>
                                </th>
                                <th>
                                    <%= category.title %>
                                </th>
                                <th>
                                    <%= category.slug %>
                                </th>
                                <th>
                                    <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>
                                    <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDelete(event, this)">
                                        <input type="hidden" name="id" id="id" value="<%= category.id %>">
                                        <button class="btn btn-danger">Deletar</button>
                                    </form>
                                </th>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
    </body>
    <%- include('../../partials/footer.ejs') %>

        <script>
            function confirmDelete(event, form) {
                event.preventDefault();
                let decision = confirm("Você quer deletar esta categoria?");
                if (decision) {
                    form.submit();
                }
            }
        </script>