            <div class="card">
                <div class="card-header">
                    <h3>Login</h3>
                </div>
                <div class="card-body">
                    <form action="/authenticate" method="POST">
                        <label class=" mb-0">E-mail</label>
                        <input class="form-control" type="email" name="email" placeholder="E-mail">
