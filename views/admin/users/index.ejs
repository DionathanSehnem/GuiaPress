<%- include('../../partials/header.ejs') %>


    <body>
        <%- include('../../partials/navbar.ejs') %>
            <div class="container mt-5">
                <h2>Usuários</h2>
                <a href="/admin/users/new" class="btn btn-success">Criar novo usuário</a>
                <table class="table table-bordered mt-4">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>E-mail</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                        </tr>
                        <% users.forEach((user) => { %>
                            <tr>
                                <th>
                                    <%= user.id %>
                                </th>
                                <th>
                                    <%= user.email %>
                                </th>
                                <th>
                                    <a href="#" class="btn btn-warning">Editar</a>
                                    <form style="display: inline;" onsubmit="confirmDelete(event, this)">
                                        <input type="hidden" name="id" id="id" value="<%= user.id %>">
                                        <button class="btn btn-danger">Deletar</button>
                                    </form>
                                </th>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
    </body>
    <%- include('../../partials/footer.ejs') %>